<pretty-config xmlns="http://ocpsoft.org/prettyfaces/3.3.3" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/prettyfaces/3.3.3               http://ocpsoft.org/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">

    <url-mapping id="tournaments">
        <pattern value="/tournaments" />
        <view-id value="/pages/tournaments.xhtml" />
    </url-mapping>
    
    <url-mapping id="tournamentsDetails">
        <pattern value="/tournaments/#{id}" />
        <view-id value="/pages/tournaments.xhtml" />
    </url-mapping>
    
    <url-mapping id="posts">
        <pattern value="/posts" />
        <view-id value="/pages/posts.xhtml" />
    </url-mapping>
    
    <url-mapping id="postDetails">
        <pattern value="/posts/#{id}" />
        <view-id value="/pages/posts.xhtml" />
    </url-mapping>
    
    <url-mapping id="passwordReminder">
        <pattern value="/passwordReminder" />
        <view-id value="/pages/passwordReminder.xhtml" />
    </url-mapping>
    
    <url-mapping id="terms">
        <pattern value="/tos" />
        <view-id value="/pages/terms.xhtml" />
    </url-mapping>
  
</pretty-config>