            <column name="first_name" value="admin"/>
            <column name="last_name" value="admin"/>
            <column name="email" value="admin@chessclan.pl"/>
            <column name="birth_date" valueDate="now()"/>
            <column name="creation_date" valueDate="now()"/> 
            <column name="login" value="admin"/>
            <column name="password" value="76a2173be6393254e72ffa4d6df1030a"/>
        </insert>
        <insert tableName="roles">
            <column name="user_role_id" valueNumeric="1"/>
            <column name="login" value="admin"/>
            <column name="authority" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>
</databaseChangeLog>