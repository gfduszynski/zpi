<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="gfduszynski">
        <insert tableName="test">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="Fred"/>
        </insert>
    </changeSet>
    <changeSet id="2" author="danielengel">
        <createTable tableName="clubs">
            <column name="club_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
        </createTable>
        <createTable tableName="users">
            <column name="user_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="enabled" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="user_club" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="sex" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="user_club" constraintName="user_club_ref" referencedTableName="clubs" referencedColumnNames="club_id"/>
    </changeSet>
    <changeSet id="3" author="danielengel">
        <createTable tableName="roles">
            <column name="user_role_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="authority" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!--addForeignKeyConstraint baseTableName="roles" baseColumnNames="login" constraintName="user_role_ref" referencedTableName="users" referencedColumnNames="login"/-->
        <insert tableName="users">
            <column name="user_id" valueNumeric="1"/>
